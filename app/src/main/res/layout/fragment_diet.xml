<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DietFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/ln8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#74DCA8"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/cdau"
            android:textAlignment="center">

        </TextView>



    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#E3B7B7"
        android:text="@string/bmi_c_a_b_n_l"
        android:layout_marginTop="65dp"
        android:textSize="30sp">

    </TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#74DCA8"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="140dp"
                android:id="@+id/imgbtnTTDD"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="#EF9A9A"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin đinh dưỡng"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="#EF9A9A"
                android:scaleType="fitCenter"
                android:id="@+id/btnThucDon"
                android:src="@drawable/logo">

            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gợi ý dinh dưỡng"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center">

            </TextView>

        </LinearLayout>

    </LinearLayout>






</FrameLayout>
