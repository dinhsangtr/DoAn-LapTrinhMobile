<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfd3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textviewtenchedo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="Chế độ ăn giảm cân"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_onguyenta"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="Nắm được lượng calo: lượng calo bạn cần nhỏ hơn lượng calo bạn nạp vào và nhỏ hơn lượng calo bạn sử dụng trong thực tế."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_onguyenta"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="Biết giá trị năng lượng các món ăn và tuyệt đối không bỏ bữa sáng, khi ăn nên ăn chậm nhai kỹ: vừa tốt cho tiêu hóa, no lâu làm kìm hãm sự thèm ăn của cơ thể."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_onguyenta"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="Ăn đủ chất xơ: nạp đủ 20gr chất xơ mỗi ngày từ ngũ cốc nguyên hạt, trái cây và rau quả giúp bạn cảm thấy no lâu hơn. Lượng chất xơ càng tăng lên thì tổng lượng calo bạn cung cấp cho cơ thể giảm đi, chất xơ cũng giảm lượng đường trong máu, bớt lượng cholesterol xấu và ngăn ngừa ung thư ruột già."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_onguyenta"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="Duy trì lượng Canxi và Vitamin D hằng ngày: cặp đôi này đóng vai trò cực kỳ quan trọng trong việc kiểm soát cân nặng. Việc dùng nhiều sữa trong chế độ ăn kích thích tế bào thiêu cháy mỡ và giảm tích lỹ các chất này. Nếu tiêu thu quá ít canxi, cân nặng của bạn sẽ tăng dù bạn đã giảm lượng calo nạp vào."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_onguyenta"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="Lựa chọn các loại chất béo tốt: bao gồm axit béo không bão hòa đơn và axit béo omega-3 được tìm thấy nhiều trong các loại quả hạch, bơ, hạnh nhân, óc chó, cá thu, cá hồi, cá mòi,… những chất béo này tốt cho tim mạch, dễ tiêu hóa và giúp bạn cảm thấy no lâu hơn sau bữa ăn."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_onguyenta"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="Thay đổi nguồn cung cấp protein: Protein giúp bạn no bụng lâu hơn, hãy lựa chọn các loại thực phẩm lành mạnh như cá, thịt gà trắng, cá loại đậu, rau cải xanh, rau ngót hay trái cây như dâu tằm, chanh leo để bổ dung protein thay cho các loại thịt đỏ như bò, lợn, cừu giúp bạn sớm có thân hình mảnh mai mà còn làm cho làn da giàu sức sống hơn rất nhiều."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_onguyenta"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="Uống đủ nước: muốn có kết quả giảm cân trong thời gian ngắn điều quan trọng nhất cần làm là cung cấp đủ lượng nước cần thiết cho cơ thể. Thay thế các loại đồ uống có đường, cà phê hay trà sữa bằng nước lọc hoặc trái cay tươi, tối thiểu 1 ngày cung cấp 2 lít nước cho cơ thể."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    :gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_onguyenta"
                    android:padding="6dp"
                    android:text="Tận dụng trà xanh và nước ép cam, quýt: việc nhâm nhi 1 vài tách trà xanh mỗi ngày đã được chúng minh cực kỳ hữu ích trong việc thúc đẩy quá trình giảm cân, đặt biết là giảm mỡ bụng. Nhờ lượng chất chống oxy hóa dồi dào có trong đồ uống này, nếu không thích vị trà bạn hãy dùng thử thêm nhiều nước ép cam, quýt, bưởi tươi cũng cho hiệu quả giảm cân và chống lão hóa tương đương trà xanh."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="6dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/buttongoiythucdon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_goiythucdon"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Gợi Ý Thực Đơn 7 Ngày"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/buttonthamkhaothucdon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_goiythucdon"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Tham khảo thực đơn"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
