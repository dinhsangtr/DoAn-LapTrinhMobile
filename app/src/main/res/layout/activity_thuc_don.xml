<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCDAU"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chế Độ Ăn Uống"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">

        <TextView
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/textviewchedotangcan"
            android:background="@drawable/vvv"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Chế độ ăn tăng cân"
            android:layout_weight="1"/>
        <TextView
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/textviewchedogiamcan"
            android:background="@drawable/vvv"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:text="Chế độ ăn giảm cân"
            android:layout_weight="1"/>

        <TextView
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/textviewchedoandu"
            android:background="@drawable/vvv"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:text="Chế độ ăn đủ dưỡng chất"
            android:layout_weight="1"/>
        <TextView
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/textviewchedobeophi"
            android:background="@drawable/vvv"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:text="Chế độ ăn người béo phì"
            android:layout_weight="1"/>
        <TextView
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/textviewchedotieuduong"
            android:background="@drawable/vvv"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:text="Chế độ ăn người tiểu đường"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
