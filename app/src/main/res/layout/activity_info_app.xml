<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InfoAppActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddDrug1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thông tin App"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_below="@id/toolbarAddDrug1"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_practice">


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="App sổ theo dỗi sức khỏe là phần mềm quản lý về sức khỏe. Liên quan đến bệnh án, thể chất, nhắc lịch uống thuốc,.... App hỗ trợ tính toán tình trạng sức khỏe, nhắc lịch uống thuốc cho người hay quên, cải thiện tình trạng sức khỏe của người sử dụng thông qua uống thuốc đúng giờ, không bỏ cử, tập luyện đúng cách theo sức khỏe của mình "
        android:layout_marginTop="10dp"

        android:textSize="22dp"
        android:textColor="@color/black"/>
    </LinearLayout>

</RelativeLayout>